---
import { Icon } from "astro-icon/components";
import Navigation from "../components/Navigation.astro";
import { SkipLinks } from "accessible-astro-components";
---

<header>
  <SkipLinks />
  <Navigation>
    <li class="menu-item has-dropdown">
      <button aria-haspopup="true" aria-expanded="false">Προϊόντα</button>
      <ul class="dropdown-menu">
        <li class="submenu-item">
          <a href="/bath/">Μπάνιο</a>
        </li>
        <li class="submenu-item">
          <a href="/tiles/">Πλακάκια</a>
        </li>
        <li class="submenu-item">
          <a
            href="https://www.thekitchenstudio.gr/wardrobes/"
            title="thekitchenstudio.gr"
            rel="external noopener"
            target="_blank"
            class="link-with-icon"
          >
            <span class="icon-text-container wardrobes">
              Ντουλάπες Υπνοδωματίου
              <Icon name="mdi:open-in-new" class="h-4 w-4" />
            </span>
          </a>
        </li>
        <li class="submenu-item">
          <a
            href="https://www.thekitchenstudio.gr/"
            title="thekitchenstudio.gr"
            rel="external noopener"
            target="_blank"
            class="link-with-icon"
          >
            <span class="icon-text-container">
              Κουζίνα
              <Icon name="mdi:open-in-new" class="h-4 w-4" />
            </span>
          </a>
        </li>
      </ul>
    </li>
    <li class="menu-item">
      <a href="/showroom">Showroom</a>
    </li>
    <li class="menu-item">
      <a href="/erga">Έργα</a>
    </li>
    <li class="menu-item">
      <a href="/about-us">Προφίλ</a>
    </li>
    <li class="menu-item">
      <a href="/contact">Επικοινωνία</a>
    </li>
  </Navigation>
</header>

<style lang="scss" is:global>
  @use "../assets/scss/base/outline" as *;

  header {
    .type-icon a {
      display: block;

      [data-icon] {
        height: auto;
        margin-top: -4px;
        width: 30px;

        path {
          fill: var(--action-color);
        }
      }

      &:hover {
        [data-icon] path {
          fill: var(--action-color-state);
        }
      }
    }

    .link-with-icon {
      .icon-text-container {
        display: flex;
        align-items: center;
        gap: 4px;
      }

      &:hover {
        color: black !important;
      }
    }
  }
</style>
